{
	"compilerOptions": {
		// Set this collection based on Node version used in VSCode based on
		// https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
		"module": "node16",
		"target": "ES2022",
		"lib": ["ES2022"],

		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
